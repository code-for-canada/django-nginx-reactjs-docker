{
	"info": {
		"_postman_id": "a8edf4b0-f3eb-438b-88d6-b1b342f9bf37",
		"name": "ThunderCAT",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get User's Token - /api/auth/token/create/",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "fa278198-bc43-4519-b13f-acda2a4e7b9e",
						"exec": [
							"var jsonData = JSON.parse(responseBody);\r",
							"postman.setEnvironmentVariable(\"token\", jsonData.auth_token);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "25a5f79e-3ab3-427e-8414-573e02f8d797",
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{THUNDERCAT_PASSWORD}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{THUNDERCAT_USERNAME}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"admin\",\r\n  \"password\": \"admin1234!\"\r\n}"
				},
				"url": {
					"raw": "http://localhost/api/auth/token/create/",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"auth",
						"token",
						"create",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Get auth urls -  /api/auth",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "975330b7-e058-4a15-9dcb-7b2100f8b8c2",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Getting 'user' url\", function () {\r",
							"    pm.expect(pm.response.text()).to.include('\"user\":\"http://localhost/api/auth/me\"');\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{THUNDERCAT_URL}}/api/auth",
					"host": [
						"{{THUNDERCAT_URL}}"
					],
					"path": [
						"api",
						"auth"
					]
				}
			},
			"response": []
		}
	]
}